

<h3>Welcome, {{name}}!</h3>
{{#if trainings}}
<table class="striped">
   <thead>
      <div class="row col sm5">
         <a href="/active" class="btn purple">Active trainings</a>
      </div>
      <tr>
         <th>Training</th>
         <th>Target Deadline</th>
         <th>Actual Deadline</th>
         <th>Workout</th>
         <th></th>
      </tr>
   </thead>
   <tbody>
      {{#each trainings}}
      <tr>
         <td><a class="tag" href="/trainings/{{_id}}">{{cwTitle}}</a></td>
         <td>{{formatDate targetDeadline 'MMMM Do, h:mm a'}}</td>
         <td>{{formatDate actualDeadline 'MMMM Do, h:mm a'}}</td>
         <td><span class="dash-mod">{{modName}}</span></td>
         <td>
            <a href="/trainings/edit/{{_id}}" class="waves-effect waves-purple btn-flat">
            <i class="tiny material-icons">edit</i>
            </a>
         </td>
         <td>
            <form action="/trainings/{{_id}}" method="POST" id="delete-form">
               <input type="hidden" name="_method" value="DELETE">
               <button type="submit" class="waves-effect waves-purple btn-flat">
               <i class="tiny material-icons">delete</i>
               </button>
            </form>
         </td>
      </tr>
      {{/each}}
   </tbody>
</table>
{{else}}
<p>Your health is important. Add a training goal to maintain it!</p>
{{/if}}

