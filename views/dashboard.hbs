

<h3>Welcome, {{name}}!</h3>
{{#if training}}
<table class="striped">
   <thead>
      <div class="row col sm5">
         <a href="/weekly" class="btn purple">Weekly Training Goals</a>
      </div>
      <tr>
         <th>Training Goal</th>
         <th>Start Date</th>
         <th>Target Deadline</th>
         <th>Actual Deadline</th>
         <th>Workout</th>
         <th>Training Status</th>

         <th></th>
      </tr>
   </thead>
   <tbody>
      {{#each training}}
      <tr>
         <td><a class="tag" href="/training/{{_id}}">{{trainingGoal}}</a></td>
         <td>{{formatDate startDate 'MMMM Do, h:mm a'}}</td>
         <td>{{formatDate targetDeadline 'MMMM Do, h:mm a'}}</td>
         <td>{{formatDate actualDeadline 'MMMM Do, h:mm a'}}</td>
         <td><span class="dash-mod">{{workoutName}}</span></td>
         <td><span class="dash-mod">{{trainingStatus}}</span></td>
         <td>
            <a href="/training/edit/{{_id}}" class="waves-effect waves-purple btn-flat">
            <i class="tiny material-icons">edit</i>
            </a>
         </td>
         <td>
            <form action="/training/{{_id}}" method="POST" id="delete-form">
               <input type="hidden" name="_method" value="DELETE">
               <button type="submit" class="waves-effect waves-purple btn-flat">
               <i class="tiny material-icons">delete</i>
               </button>
            </form>
         </td>
      </tr>
      {{/each}}
   </tbody>
</table>
{{else}}
<p>Your health is important. Add a training goal to maintain it!</p>
{{/if}}

